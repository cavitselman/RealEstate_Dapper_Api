@model List<ResultInBoxMessageDTO>

@{
    ViewData["Title"] = "OutBox";
    Layout = "~/Areas/EstateAgent/Views/Shared/_EstateAgentLayout.cshtml";
    int count = 0;
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Giden Kutusu</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Alıcı Email</th>
                                <th scope="col">Konu</th>
                                <th scope="col">Tarih</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Detaylar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.ReceiverEmail</td>
                                    <td>@item.Subject</td>
                                    <td>@item.SendDate.ToString("dd/MM/yy HH:mm", System.Globalization.CultureInfo.InvariantCulture)</td>
                                    <td><a href="/EstateAgent/Message/DeleteMessageOutBox/@item.MessageId" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/EstateAgent/Message/OutBoxDetail/@item.MessageId" class="btn btn-outline-success">Mesajı Gör</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>