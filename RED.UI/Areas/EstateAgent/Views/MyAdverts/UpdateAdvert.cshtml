@model UpdatePropertyDTO

@{
    ViewData["Title"] = "UpdateAdvert";
    Layout = "~/Areas/EstateAgent/Views/Shared/_EstateAgentLayout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">İlan Düzenleme Sayfası</h6>
                <form method="post">
                    <input type="hidden" asp-for="PropertyID" />
                    <label>İlan Başlığı</label>
                    <input type="text" asp-for="Title" class="form-control" />
                    <br />
                    <label>Şehir</label>
                    <input type="text" asp-for="City" class="form-control" />
                    <br />
                    <label>İlçe</label>
                    <input type="text" asp-for="District" class="form-control" />
                    <br />
                    <label>Kategori</label>
                    @Html.DropDownListFor(x => x.PropertyCategory, (IEnumerable<SelectListItem>)ViewBag.categoryList, new { @class = "form-control" })
                    <br />
                    <label>Fiyat</label>
                    <input type="number" asp-for="Price" class="form-control" />
                    <br />
                    <label>Tür</label>
                    @Html.DropDownListFor(x => x.Type, (IEnumerable<SelectListItem>)ViewBag.typeList, new { @class = "form-control" })
                    <br />
                    <label>Kapak Fotoğrafı</label>
                    <input type="text" asp-for="CoverImage" class="form-control" />
                    <br />
                    <label>İlan Açık Adresi</label>
                    <textarea asp-for="Address" class="form-control" rows="5"></textarea>
                    <br />
                    <label>İlan Açıklaması</label>
                    <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                    <br />
                    <button class="btn-success">İlanı Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>
