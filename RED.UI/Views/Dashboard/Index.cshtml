@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">

            @await Component.InvokeAsync("_AdminDashboardStatisticsComponentPartial")

            <div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                    <div class="col-sm-12 col-xl-6">
                        <div class="bg-light text-center rounded p-4">
                            <div class="d-flex align-items-center justify-content-between mb-4">
                                <h6 class="mb-0">Dünya Çapında Satışlar</h6>
                                <a href="">Tümünü Göster</a>
                            </div>
                            <canvas id="worldwide-sales"></canvas>
                        </div>
                    </div>
                    <div class="col-sm-12 col-xl-6">
                        <div class="bg-light text-center rounded p-4">
                            <div class="d-flex align-items-center justify-content-between mb-4">
                                <h6 class="mb-0">Satış ve Gelir</h6>
                                <a href="">Tümünü Göster</a>
                            </div>
                            <canvas id="salse-revenue"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            @await Component.InvokeAsync("_AdminDashboardLast5PropertyComponentPartial")

            <div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                    @await Component.InvokeAsync("_AdminDashboardLast4ContactListComponentPartial")

                    <div class="col-sm-12 col-md-6 col-xl-4">
                        <div class="h-100 bg-light rounded p-4">
                            <div class="d-flex align-items-center justify-content-between mb-4">
                                <h6 class="mb-0">Calender</h6>
                                <a href="">Show All</a>
                            </div>
                            <div id="calender"></div>
                        </div>
                    </div>

                    @await Component.InvokeAsync("_AdminDashboardToDoListComponentPartial")

                </div>
            </div>
        </div>
    </div>
</div>