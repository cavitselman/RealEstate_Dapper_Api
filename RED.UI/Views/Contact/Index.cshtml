@model CreateContactDTO

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<h2 class="title">Bize Ulaşın</h2>

@if (ViewBag.SuccessMessage != null)
{
    <br />
    <div id="successMessage" class="alert alert-success text-center" style="width: 100%; padding: 15px; margin: 0 auto;" role="alert">
        @ViewBag.SuccessMessage
    </div>
}

<section class="w3l-contact" id="contact">
    <div class="contact-infubd py-5">
        <div class="container py-lg-3">
            <div class="contact-grids row">
                <div class="col-lg-6 contact-left">
                    <div class="partners">
                        <div class="cont-details">
                            <h5>İletişim Bilgilerimiz</h5>
                            <p class="mt-3 mb-4">
                                @ViewBag.Description
                            </p>
                        </div>
                        <div class="hours">
                            <h6 class="mt-4">E-mail Adresimiz:</h6>
                            <p>
                                <a href="mailto:@ViewBag.Email">
                                    @ViewBag.Email
                                </a>
                            </p>
                            <h6 class="mt-4">Ofisimize Gelin:</h6>
                            <p> @ViewBag.Address</p>
                            <h6 class="mt-4">İletişim:</h6>
                            <p class="margin-top"><a href="tel:@ViewBag.Phone">@ViewBag.Phone</a></p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 mt-lg-0 mt-5 contact-right">
                    <form method="post" asp-controller="Contact" asp-action="ContactMessage">
                        <div class="input-grids">
                            <div class="form-group">
                                <input type="text" placeholder="Adınız*" asp-for="Name" class="contact-input" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="email" placeholder="Mail Adresiniz*" asp-for="Email" class="contact-input" required="" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="text" placeholder="Konu*" asp-for="Subject" class="contact-input" />
                                <span asp-validation-for="Subject" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <textarea asp-for="Message" placeholder="Bu alana mesajınızı yazabilirsiniz*" class="contact-input" required=""></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>
                        <div class="text-right">
                            <button class="btn btn-style btn-primary" style="margin-right: 115px;">Mesajı Gönder</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="map mt-5 pt-md-5">
                <h5>Harita</h5>
                <iframe style="width:1050px;height:300px;border:0;margin-top:-40px" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d10516.032093094685!2d27.120887491466885!3d38.408309860696576!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14bbd925a76e26f7%3A0xb540dfdc0bb32e47!2zxLB6bWlyIFRhcmloaSBBc2Fuc8O2ciBCaW5hc8Sx!5e0!3m2!1str!2str!4v1728145167653!5m2!1str!2str" allowfullscreen=""></iframe>
            </div>
        </div>
    </div>
</section>

<style>
    .contact-infubd {
        background-color: #f8f9fa; /* Arka plan rengi */
        border-radius: 10px; /* Kenarları yuvarlama */
        padding: 30px; /* İç boşluk */
    }

    .contact-input {
        width: 80%; /* Genişlik %100 yapıldı */
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
        margin-bottom: 15px; /* Alt boşluk ekledim */
    }

    textarea.contact-input {
        height: 200px; /* Yüksekliği ayarlayın */
    }

    #successMessage {
        margin: 20px auto; /* Yukarıdan ve aşağıdan boşluk */
        text-align: center; /* Metni ortala */
        width: fit-content; /* İçeriğe göre genişlik ayarla */
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var message = document.getElementById("successMessage");
        if (message) {
            setTimeout(function () {
                message.style.display = 'none'; // Mesajı gizle
            }, 5000); // 5000 ms = 5 saniye
        }
    });
</script>
