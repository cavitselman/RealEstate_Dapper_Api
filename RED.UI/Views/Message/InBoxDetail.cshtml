@model ResultInBoxMessageDTO

@{
    ViewData["Title"] = "InBox Detail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<input type="hidden" asp-for="@Model.MessageId" />
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title" style="position:relative; right:200px"><br />Mesaj Detayları</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card" style="right:220px">
                    <div class="card-body">
                        <div class="card-sub">
                            <b>Gönderen:</b> @Model.SenderName
                            <br />
                            <b>Email:</b> @Model.SenderEmail
                            <br />
                            <b>Tarih:</b> @Model.SendDate.ToString("dd/MM/yy HH:mm", System.Globalization.CultureInfo.InvariantCulture)
                            <br />
                            <b>Konu:</b> @Model.Subject
                            <br />
                            <b>Mesaj:</b> @Model.MessageContent
                        </div>                        
                    </div>
                </div>
            </div>
        </div><br />
        <button style="position:relative;right:210px" class="btn btn-primary">Cevap Yaz</button>
    </div>
</div>
