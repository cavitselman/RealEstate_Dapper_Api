@model UpdateAppUserRoleDTO

@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Rol Atama</h6>
                <form method="post">
                    <input type="hidden" asp-for="UserId" />
                    <label>Kullanıcı Adı</label>
                    <input type="text" asp-for="UserName" class="form-control" />
                    <br />
                    <select asp-for="UserRole" class="form-control">
                        <option value="">Seçiniz</option>
                        <option value="1">Admin</option>
                        <option value="2">Üye</option>
                        <option value="3">Yönetici</option>
                        <option value="4">Ziyaretçi</option>
                        <option value="5">Çalışan</option>
                    </select>
                    <br />
                    <button class="btn-outline-success">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>